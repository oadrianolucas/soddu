    <div class="d-flex">
      <div class="toast-body">
        {{error_msg}}
      </div>
      <button
        type="button"
        class="btn text-white"
        data-dismiss="toast"
        aria-label="Close"
      >
        <i class="ri-close-line"></i>
      </button>
    </div>
  </div>
{{/if}}