{{>_nav}}
<div class="container col-6m">
    <div class="col-md-8 offset-md-2">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/registrys">Cadastros</a></li>
                <li class="breadcrumb-item active" aria-current="page">Adicionar</li>
            </ol>
        </nav>
        <div class="card-body rounded border ">
            <form action="/create/registry" method="POST">
                <div class="form-group">
                    <label for="name">Nome:</label>
                    <input class="form-control textM" type="text" name="name" required>
                </div>
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            <label for="nascimento">Nascimento:</label>
                            <input class="form-control" type="text" id="data" placeholder="00/00/0000"
                                data-mask="00/00/0000" name="birth" required>
                        </div>
                    </div>
                    <div class="col-8">
                        <div class="form-group">
                            <label for="whatsapp">WhatsApp:</label>
                            <input class="form-control" type="text" placeholder="(11)00000-0000" id="phone" name="phone"
                                required>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="mae">Nome da Mãe:</label>
                    <input class="form-control" type="text" name="mother" required>
                </div>
                <div class="row">
                    <div class="col-6 col-md-4">
                        <label for="cep">Cep:</label>
                        <input class="form-control" type="text" id="cep" placeholder="00000-000" name="zipcode"
                            required>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="endereco">Endereço:</label>
                        <input type="text" class="form-control" id="logradouro" name="address" readonly>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="bairro">Bairro:</label>
                        <input type="text" class="form-control" id="bairro" name="district" readonly>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="cidade">Cidade:</label>
                        <input type="text" class="form-control" id="localidade" name="city" readonly>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="estado">Estado:</label>
                        <input type="text" class="form-control" id="uf" name="state" readonly>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="numero">Numero:</label>
                        <input class="form-control" type="text" name="number" required>
                    </div>
                </div>
                </br>
                <div class="form-group">
                    <label for="escola">Escola:</label>
                    <select class="form-control" name="school">
                        {{#each school}}
                        <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="obs">Obs:</label>
                    <textarea class="form-control" type="text" name="note"></textarea>
                </div>
                <button class="btn btn-danger" type="reset">Limpar</button>
                <button class="btn btn-primary" type="submit">Cadastrar</button>
            </form>
        </div>
    </div>
    {{>_footer}}
</div>